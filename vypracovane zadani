MEASURE data[27 max srazky] = MAX(data[srazky])
MEASURE data[28 max srazky 2000] = MAXX(FILTER(data,data[rok] = 2000),data[srazky])
MEASURE data[29 max srazky 2000 1 ] = MAXX(FILTER(data,data[rok] = 2000 && data[mesic] = 1),data[srazky])
MEASURE data[30 maximalni srazky max datum] = MAXX(FILTER(data,data[datum] = MAXX(ALL(data),data[datum])),data[srazky])
MEASURE data[31 nejdestivejsi lokalita] = IF(MAX(data[srazky]) = MAXX(ALL(data),data[srazky]),"ANO","NE")
MEASURE data[32 podil srazek] = SUM(data[srazky]) / SUMX(ALL(data),data[srazky])
